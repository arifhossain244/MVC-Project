@model IEnumerable<Evidance_08.Models.Product>

@using Evidance_08.Models.MetaData
@{
    ViewBag.Title = "Index";
}

<div class="container mb-2">
    <div class="row mb-2">
        <div class="col">
            <div class="display-6">Product Lists:</div>
            <div class="d-flex justify-content-end mb-1">
                <a href="@Url.Action("Create", "Product")" class="btn btn-outline-primary">Create</a>
            </div>
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr class="text-center">
                        <th>Photo</th>
                        <th>@Html.DisplayNameFor(x => x.ProductName)</th>
                        <th>@Html.DisplayNameFor(x => x.Stock)</th>
                        <th>@Html.DisplayNameFor(x => x.Sale.SalesDate)</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pr in Model)
                    {
                        <tr>
                            <td><img src="~/Images/@pr.Picture" width="40" class="img-thumbnail rounded-circle" /></td>
                            <td>@Html.DisplayFor(x => pr.ProductName)</td>
                            <td>@Html.DisplayFor(x => pr.Stock)</td>
                            <td>@Html.DisplayFor(x => pr.Sale.SalesDate)</td>
                            <td style="width:70px;" class="text-center"><a href="@Url.Action("Edit", "Product", new { ID =pr.ProductId })" class="btn btn-outline-primary btn-sm">Edit</a></td>
                            <td style="width:70px;" class="text-center"><a href="@Url.Action("Delete", "Product", new { ID =pr.ProductId })" class="btn btn-outline-danger btn-sm">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section styles {
    <link href="~/Content/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/main.css" rel="stylesheet" type="text/css" />
}
@section scripts {

    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $("#SalesDate").datepicker({
            format: 'yyyy-mm-dd'
        });
    </script>
}