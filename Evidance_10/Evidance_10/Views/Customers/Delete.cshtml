@model Evidance_10.Models.Customer
@{
    ViewBag.Title = "Delete";
}
<style>
    #Box {
        margin-left: 180px;
        margin-right: 270px;
        background-color: rgba(6, 114, 101, .2);
        box-shadow: 0 4px 8px 0 rgb(10 52 47 / 0.2), 0 6px 20px 0 rgba(6, 114, 101, .2);
        padding: 10px;
    }
</style>
<div class=" row" id="Box">
    <div class=" col-12">
        <h3>Delete Customer</h3>
        <div id="placeholder"></div>
        @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "placeholder" }))
        {
            @Html.HiddenFor(x => x.CustomerId)
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.CustomerName, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.DisplayFor(x => x.CustomerName)
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.PhoneNumber, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.DisplayFor(x => x.PhoneNumber)
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Email, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.DisplayFor(x => x.Email)
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.City, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.DisplayFor(x => x.City)
                </div>
            </div>
            <div class=" form-group row mb-1">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-danger">Delete confirm</button>
                </div>
            </div>
        }
    </div>
    <div class="col-12">
        &lt;&lt;&lt;@Html.ActionLink("Back To List", "Index")
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}