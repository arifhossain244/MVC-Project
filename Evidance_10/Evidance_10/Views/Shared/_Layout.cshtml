<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <style>
        body {
            padding-top: 58px;
            background: url("../../images/pexels-photo-131699.jpeg");
            background-size: cover;
            background-attachment: fixed;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        #footer {
            background-color: rgba(6, 114, 101, .2);
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            color: white;
            padding: 20px;
        }

        .nav-link {
            padding: 10px;
        }

            .nav-link:hover {
                background-color: rgb(60, 198, 223);
                color: white;
            }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <nav class="navbar navbar-light navbar-expand-md fixed-top border-bottom" style="background-color: #AFEEEE ">
        <div class=" container-fluid">
            <span class="navbar-brand" style="color: #B22222">Online products</span>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Customers", "Index", "Customers", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Products", "Index", "Products", new { }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
            <form class="d-flex">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="container-fluid" style="min-height:calc(100vh - 140px)">
        @RenderBody()
    </div>
    <footer class="container border-top border-3 text-center"
            id="footer" style="height:82px">
        &copy;@DateTime.Now.Year - MVC5 Application
        &diams;&diams;&diams; 1264996-Md Arif Hossain&diams;&diams;&diams;
    </footer>
    @RenderSection("scripts", false)
</body>
</html>
